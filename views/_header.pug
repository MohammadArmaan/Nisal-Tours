header.header.sticky
  nav.nav.nav--tours
    a.nav__el.nav__all__tours(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Nisal Tours logo')
  nav.nav.nav--user
    a.nav__el.nav__el__tours.hidden(href='/') All Tours
    if user
      a.nav__el.nav__el--logout(href="#") Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el.nav__el--login(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up
  button.menu-btn(type='button') &#9776;
  button.close-btn(type='button') &times;
.placeholder
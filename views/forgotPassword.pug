extends base

block content
    main.main.padding__formator
        .forgetPassword-form
            h2.heading-secondary.ma-bt-lg Forgot your Password?
            form.form.form--forgotPassword
                .form__group 
                    p.forgot_password__text If you have forget your password just put your email we will send password recovery email for you
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    button.btn.btn--green(type='submit') Get Email
